

  
  <div class="mx-auto" style="width: 200px;">
    <div>
  


        
        <h2>新規会員登録</h2>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
        
        
          <div class="field">
            <%= f.label :（姓） %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "姓" %>
          </div>
        
          <div class="field">
            <%= f.label :（名） %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "名" %>
          </div>
        
          <div class="field">
            <%= f.label :（セイ） %><br />
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "カナ姓" %>
          </div>
        
          <div class="field">
            <%= f.label :（メイ） %><br />
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "カナ名" %>
          </div>
        
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "メールアドレス" %>
          </div>
          
          <div class="field">
            <%= f.label :郵便番号（ハイフンなし） %><br />
            <%= f.text_field :post_code, autofocus: true, autocomplete: "郵便番号" %>
          </div>
        
          <div class="field">
            <%= f.label :住所 %><br />
            <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
          </div>
        
          <div class="field">
            <%= f.label :電話番号（ハイフンなし） %><br />
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
          </div>
         
          <div class="field">
            <%= f.label :パスワード（６文字以上） %>
            <% if @minimum_password_length %>
            <em><% @minimum_password_length %></em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        
          <div class="field">
            <%= f.label :パスワード（確認用） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        
          <div class="actions">
            <%= f.submit "新規登録" , class: "btn btn-sm btn-success" %>
          </div>
        <% end %>
        
        
        
        <p>既に登録済みの方</p>
        <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
        
        
        
 
     </div> 
  </div>