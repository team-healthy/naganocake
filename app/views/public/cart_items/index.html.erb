

<div class="container">
  <div class="row">
    <div class="col">
      <h4>ショッピングカート</h4>
    </div>
    <div class="col">
      <%= link_to 'カートを空にする', 'cart_items', method: :delete, "data-confirm" => "本当に消しますか?", class: 'btn btn-danger' %>
    </div>
  </div>

  <table border="1">
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    <% @cart_items.each do |cart_item| %>
    <% @total = @total + cart_item.subtotal %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= (cart_item.item.with_tax_price.to_s(:delimited)) %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
        <div class="row">
          <div class="col">
            <%= f.select :amount, *[1..20] %>
          </div>
          <div class="col">
            <%= f.submit '変更', class: 'btn btn-success btn-xs' %>
          </div>
        </div>
        <% end %>
      </td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: 'btn btn-danger' %></td>
    </tr>
    <% end %>
  </table>
  <div class="row">
    <div class="col-md-2">
      <%= link_to '買い物を続ける', items_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-md-4 offset-md-6">
      <table border="1">
        <tr>
          <td>合計金額</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to '情報入力に進む', new_order_path, class: 'btn btn-success' %>
  </div>
</div>
