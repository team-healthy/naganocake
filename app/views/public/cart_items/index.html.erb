<div class="container justify-content-center  mt-5 mb-3">
  <div class="row">
    <div class="col mb-3">
      <h4>ショッピングカート</h4>
    </div>
    <div class="col d-flex justify-content-end mt-3 mb-3">
      <%= link_to 'カートを空にする', 'cart_items', method: :delete, "data-confirm" => "カート内商品を全て削除しますか?", class: 'btn btn-danger' %>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
  <table border="1" class="col">
    <tr height="60" class="table-active">
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>

    <% @cart_items.each do |cart_item| %>
    <% @total = @total + cart_item.subtotal %>
    <tr height="60">
      <td>
        <%= image_tag(cart_item.item.get_image(80,70)) %>
        <strong><%= cart_item.item.name %></strong>
      </td>
      <td><%= (cart_item.item.with_tax_price.to_s(:delimited)) %></td>
      <td>
        <%= form_with model: cart_item do |f| %>
        <div class="row justify-content-center">
          <%= f.select :amount, *[1..20]%>
          <%= f.submit '変更', class: 'btn btn-info btn-xs' %>
        </div>
        <% end %>
      </td>
      <td><%= cart_item.subtotal.to_s(:delimited)%></td>
      <td class="text-center">
        <%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: 'btn btn-danger col-8' %>
      </td>
    </tr>
    <% end %>
  </table>
  </div>

  <div class="row mt-4">
    <div class=" col-2 mb-4">
      <%= link_to '買い物を続ける', root_path, class: 'btn btn-info' %>
    </div>

    <div class="col d-flex justify-content-end">
      <table border="1" class="col-3 mb-3">
        <tr>
          <td class="table-active"><strong>合計金額</strong></td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <% if @cart_items.present? %>
  <div class="row mt-3 justify-content-center">
    <%= link_to '情報入力に進む', new_order_path, class: 'btn btn-info' %>
  </div>
  <% end  %>
</div>
