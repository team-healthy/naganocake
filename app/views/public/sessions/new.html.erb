  <div class="container">
        <div class="form-row justify-content-center">
         <div class="col-2 form-group public-session-title text-center">
           <h3 class=" mt-2" style="background-color:#faf0e6;">ログイン</h3>
         </div>
        </div>
        <div class="form-row justify-content-center">
          <div class="col-4 form-group text-center">
            <h5>会員の方はこちらからログイン</h5>
          </div>
          </div>
              
              
          <div class="form-row justify-content-center">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", :size => "50"%>
            </div>
          
            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password", :size => "50" %>
            </div>
          
           
          
            <div class="row justify-content-center mt-3">
              <%= f.submit "ログイン", class: "btn btn-sm-10 btn-info"%>
            </div>
          <% end %>
          </div>
          
           <div class="row justify-content-center mt-3">
              <h6>会員登録がお済みでない方</h6>
              <p><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>
           </div>
        
     </div> 
  </div>