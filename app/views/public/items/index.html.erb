<div class="container">
  <div class="row mt-5 mb-5">
    <h4>商品一覧（全<%= @quantity %>件）</h4>
  </div>

  <div class="container">
    <div class="d-flex flex-wrap">
      <% @items.each do |item| %>
      <div class="flex-item mb-5" style="flex-basis: 25%;">
        <%= link_to item_path(item) do %>
        <p><%= image_tag(item.get_image(200,150)) %></p>
        <% end %>
        <p><%= item.name %></p>
        <p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>