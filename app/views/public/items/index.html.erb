<div class="container">
  <div class="row">
    <h4>商品一覧（全<%= @quantity %>件）</h4>
  </div>

    <% @items.each do |item| %>
      <div class="d-flex flex-wrap">
        <%= link_to item_path(item) do %>
          <p><%= image_tag(item.get_image(200,150)) %></p>
        <% end %>
      </div>
      <div>
        <p><%= link_to item.name, item_path(item) %></p>
      </div>
      <div>
        <p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
      </div>
    <% end %>
</div>