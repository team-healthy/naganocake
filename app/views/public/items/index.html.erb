<div class="container">
  <div class="row">
    <h4>商品一覧（全<%= @quantity %>件）</h4>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
        <p><%= image_tag item.image, size: "200x150" %></p>
      <% end %>
      <p><%= link_to item.name, item_path(item) %></p>
      <p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
    <% end %>
  </div>
</div>