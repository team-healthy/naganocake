<%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
<%= f.hidden_field :item_id, :value => @item.id %>
<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-4 pl-5">
      <%= image_tag(@item.get_image(400,300)) %>
    </div>

    <div class="col-md-7 offset-md-1">
      <table class="table table-borderless">
        <tr>
          <td>
            <h3><strong><%= @item.name %></strong></h3>
          </td>
        </tr>
        <tr>
          <td>
            <h5><%= @item.introduction %></h5>
          </td>
        </tr>
        <tr>
          <!--税率を変更する場合はモデルの変更だけでOK。"delimited"は数値を3桁区切りにしてる。-->
          <td>
            <div class="row ml-1">
              <strong><h5>¥ <%= @item.with_tax_price.to_s(:delimited) %></h5></strong>
              　(税込)
            </div>
          </td>
        </tr>
        <tr>
        <td>
          <%= f.select :amount, *[1..20] %>
          <%= f.submit 'カートに入れる', class: 'btn btn-info ml-5' %>
        </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<% end %>



