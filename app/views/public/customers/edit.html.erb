<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>会員情報編集</h2>
    <%= form_with model:@customer, local:true do |f| %>
      
      <div class="form-group">
        <%= f.label :姓 %>
        <%= f.text_field :last_name, class: "form-control-last_image" %>
      </div>
      <div class="form-group">
        <%= f.label :名 %>
        <%= f.text_field :first_name, class: "form-control-first_image" %>
      </div>
      <div class="form-group">
        <%= f.label :カナ姓 %>
        <%= f.text_field :last_name_kana, class: "form-control last_name_kana" %>
      </div>
    　<div class="form-group">
        <%= f.label :カナ名 %>
        <%= f.text_field :first_name_kana, class: "form-control first_name_kana" %>
      </div>
      <div class="form-group">
        <%= f.label :郵便番号 %>
        <%= f.text_field :post_code, class: "form-control post_code" %>
      </div>
       <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address, class: "form-control address" %>
      </div>
     <div class="form-group">
        <%= f.label :電話番号 %>
        <%= f.text_field :phone_number, class: "form-control-file phone_number" %>
      </div>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.text_field :email, class: "form-control email" %>
      </div>
     
     
      <div class="form-group">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      </div>
      
      <div class="form-group">
        <%= link_to "退会する", customers_confirm_withdraw_path, class: 'btn btn-danger' %>
        
      </div>
      
    <% end %>
  </div>
</div>
