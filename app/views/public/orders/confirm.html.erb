
<div class="container p-3" style="margin-bottom: 50px;">
  <div class="row">

    <div class="col-md-12 ">

       <div class="form-row justify-content-right">
       <div class="col-2 form-group public-session-title text-center">
       <h3  style="background-color:#faf0e6;"><strong>注文情報確認</strong></h3>
       </div>
      </div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-md-6 ">
      <table class="table table-borderedthead-light">
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
      </tr>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.image, size: "100x80" %>
            <strong><%= cart_item.item.name %></strong>
          </td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td><%= cart_item.amount %></td>
          <td><%= (cart_item.item.with_tax_price*cart_item.amount).to_s(:delimited) %></td>
          <td><%#= cart_item.item.add_sub_total.to_s(:delimited) %></td>
        </tr>
        <% @total += (cart_item.item.with_tax_price*cart_item.amount) %>
      <% end %>
      </table>
    </div>

    <div class="col-md-6 ">
      <table  class="table table-bordered">
      <tr>
        <td>送料</td>
        <td><%= @shipping_cost %></td>
      </tr>
      <tr>
        <td>商品合計</td>
        <td><%#= @cart_items_price %>
        <%= @total %>
        </td>
      </tr>
      <tr>
        <td>請求額</td>
        <td><%#= @total_price %>
        <%= @total + @shipping_cost %>
        </td>
      </tr>
      </table>
    </div>
  </div>

    <div class="col-md-6 ">
      <h5><strong>支払い方法</strong></h5>
      <%= @order.payment_method_i18n %>
<br>
<br>
    <h5><strong>お届け先</strong></h5>
    <%#= "〒"+ @selected_address %>
    <%= @order.full_address %>
    </div>

     

    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>
      <%= f.hidden_field :post_code, :value => @order.post_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>
      <%= f.hidden_field :shipping_cost, :value => @shipping_cost %>
      <%= f.hidden_field :total_payment, :value => (@total + @shipping_cost) %>
      <div class="text-center ">
      <%= submit_tag "注文を確定する", class: "btn btn-info" %>
      </div>
    <% end %>
</div>
