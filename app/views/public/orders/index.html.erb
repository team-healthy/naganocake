<div class="container p-3" style="margin-bottom: 50px">
  <div class="row">
   <div class="col-md-12 ">

   <div class="form-row justify-content-right">
   <div class="col-2 form-group public-session-title text-center">
     <h3 style="font-family: 'Playfair Display', serif; background-color:#faf0e6;"><strong>注文履歴一覧</strong></h3>
   </div>
   </div>


    <table class="table ">

      <tr>
        <td>注文日</td>
        <td>配送先</td>
        <td>注文商品</td>
        <td>支払い金額</td>
        <td>ステータス</td>
        <td>注文詳細</td>
      </tr>


      <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.address %></td>
      <td>
        <ul class="list-unstyled">
          <% order.order_details.each do |order_detail|  %>
            <li><%= order_detail.item.name %></li>
          <% end %>
        </ul>
      </td>
      <td><%= order.total_payment %></td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "表示する", order_path(order.id), class: "btn btn-info" %></td>
    </tr>
    <% end %>
    </table>
    <div class="row d-flex justify-content-center mb-2">
    <%= paginate @orders, theme: 'twitter-bootstrap-4' %>
     </div>


    </div>
  </div>
</div>