<div class="container-fluid mt-2" style="margin-bottom: 50px;">

 <h5 class="font-weight-bold w-25 text-center ml-5">注文履歴一覧</h5>
 
 
  <div class="row mt-3 mx-auto">
  <div class="col-6 mx-auto">
 
     <table class='table table-hover table-inverse'>
              <thead class = "table active">
                <tr>
                  <th>購入日時</th>
                  <th>購入者</th>
                  <th>注文個数</th>
                  <th>注文ステータス</th>
                  <th colspan="3"></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
             
                 <% @orders.each do |order| %>
         
                  <tr>
                    <td>
                        <%= link_to order.created_at.in_time_zone("Tokyo").strftime("%Y/%m/%d %H:%M"), admin_order_path(order.id) %>
                    </td>
                    <td>
                        <% customer = order.customer %>
                        <%= customer.last_name %>
                        <%= customer.first_name %>
                    </td>
                    <td>
                    <!--注文の注文個数を表示-->
                    <%= order.order_details.sum(:amount) %>
                    </td>
                    <td><%= order.status_i18n %></td>
                    
                  </tr>
                     <% end %>
                    
              </tbody>     
      </table>
      
      
      
      </div>
   </div>
    <div class = "row justify-content-center" >
     <%= paginate @orders, theme: 'twitter-bootstrap-4' %>
    </div>
</div>
        