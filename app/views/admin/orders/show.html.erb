                <td><%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
                <td><%= order_detail.amount %></td>
                 <td><%= order_detail.amount * order_detail.item.with_tax_price.to_s.gsub(",", "").to_i %></td>
                <!--<td><%#= order_detail.making_status %></td>-->
                <!--<td><%#= f.select :making_status, OrderDetail.making_statuses.keys.map { |k| [t("enums.order_details.making_status.#{k}"), k] }, {}, class: "form-select form-select-lg" %>-->
              <%= form_with model: @order_details, url: admin_order_details_path(@order_details.id), method: :patch, html: { class: "form-inline" } do |f| %>
              <%= f.select :status, OrderDetail.statuses.keys.map { |k| [t("enums.order_detail.status.#{k}"), k] }, {}, class: "form-control mr-2" %>
              <%= f.submit "更新", class: "btn btn-sm btn-success" %>
                  <%= f.submit "更新", class:"btn btn-info ml-4" %>
                </td>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>
    </div>
    <div class="col-3 mt-auto">
      <table class="table table-borderless" style="font-size: 20px;">
        <thead>
        </thead>
        <tbody>
          <tr>
            <td><b>商品合計</b></td>
            <!--<td><%#= (@total_payment_with_tax - @order.shipping_cost).to_s(:delimited) %>円</td>-->
            <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <td><b>送料計</b></td>
            <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <td><b>請求金額合計計</b></td>
            <td><%= @order.total_payment.to_s(:delimited) %>円</td>
            <!--<td><%#= @order.total_payment.to_s(:delimited) %>円</td>-->
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>



