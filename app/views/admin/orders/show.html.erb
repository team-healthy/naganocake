
<div class="container mt-5">
  <div class="row">
    <div class="col-10">
      <h5 class="font-weight-bold w-25 text-center ml-5">注文履歴詳細</h5>
      <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
        <table class="table table-borderless " style="font-size: 20px;">
          <thead>
          </thead>
          <tbody>
            <tr>
              <td><b>購入者</b></td>
              <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td><b>注文日</b></td>
              <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td><b>配送先</b></td>
              <td colspan="2">〒<%= @order.post_code %>  <%= @order.address %></br>
                <%= @order.name %>
              </td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td><b>支払い方法</b></td>
              <td><%= @order.payment_method_i18n %></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td><b>注文ステータス</b></td>
              <%#= f.select :status, @statuses, { selected: @order.status_before_type_cast }, class: "form-control form-control-sm col-8" %>
              <td><%= f.select :status, Order.statuses.keys.map { |k| [t("enums.order.status.#{k}"), k] }, {}, class: "form-control mr-2" %></td>
              <td><%= f.submit "更新",class:"btn btn-info ml-4" %> </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="table table-bordered">
        <thead class="table-active">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
