<%= form_with model: @item, url: admin_items_path do |f| %>
    <table class="table table-borderless">
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name, placeholder: '商品名', class: 'col'%></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction, rows:'5', placeholder: 'ここに説明文を記述します', class: 'col'%></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --") %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price,  placeholder: '1000', class: 'col-11' %> 円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <!--<td>-->
        <td class="row">
          <div class="col-4">
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中" %>
          </div>
        <!--</td>-->
        <!--<td>-->
          <div class="col-5">
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中" %>
          </div>
        <!--</td>-->
        </td>
      </tr>
    </table>