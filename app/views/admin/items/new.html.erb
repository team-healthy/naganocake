<div class="container">
  <div class="row">
    <div class="col">
      <h4>商品新規登録</h4>
    </div>
  </div>
  <%= form_with model: @item, url: admin_items_path do |f| %>
    <table class="table table-borderless">
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name, placeholder: '商品名'%></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction, rows:'5', placeholder: 'ここに説明文を記述します'%></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --" ) %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price,  placeholder: '1000'%>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <%= f.radio_button :status, true %>
          <%= f.label :status_true, "販売中" %>
        </td>
        <td>
          <%= f.radio_button :status, false %>
          <%= f.label :status_false, "販売停止中" %>
        </td>
      </tr>
    </table>
    <div><%= f.submit '新規登録', class: 'btn btn-success' %></div>
  <% end %>
</div>