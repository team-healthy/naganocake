<div class="container">
  <div class="row">
    <div class="col">
      <h4>商品一覧</h4>
    </div>
  </div>

  <% @items.each do |item| %>
    <table>
      <thead class="table-active">
        <tr>
          <td>商品ID</td>
          <td>商品名</td>
          <td>税抜価格</td>
          <td>ジャンル</td>
          <td>ステータス</td>
        </tr>
      </thead>
      <tbody class="table table-borderless">
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.genre_id %></td>
          <td><%= item.is_active %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>

