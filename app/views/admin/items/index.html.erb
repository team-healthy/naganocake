<div class="container">
  <div class="row">
    <div class="col">
      <h4>商品一覧</h4>
    </div>
    <div class="col">
      <h1><%= link_to '+', new_admin_item_path, class: 'btn btn-outline-dark, rounded-circle'%></h1>
    </div>
  </div>

  <table>
    <thead class="table-active">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody class="table table-borderless">
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item), class: "link-dark link-underline-dark" do %>
            <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>

