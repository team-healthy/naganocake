<div class="row justify-content-center">
  <%= flash[:notice] %>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-2 text-center" style="font-family: 'Playfair Display', serif; background-color:#faf0e6;">
      <h4>商品詳細</h4>
    </div>
  </div>

  <%= form_with model: @item do |f| %>
  <div class="row mt-4">
    <div class="col-md-3">
      <td><%= image_tag(@item.get_image(350,300)) %><td>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><h5><%= @item.name %></h5></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><h5><%= @item.introduction %></h5></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><h5><%= @item.genre.name %></h5></td>
        </tr>
        <tr>
          <td>税込価格<br>（税抜価格）</td>
          <!--税率を変更する場合はモデルの変更だけでOK。"delimited"は数値を3桁区切りにしてる。-->
          <td>
            <%= @item.with_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円
          </td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <!--<#%= @item.is_active %>-->
          <% if @item.is_active %>
            <span class="text-success"><h5><strong>販売中</strong></h5></span>
          <% else %>
            <span class="text-secondary"><h5><strong>販売停止中</h5></strong></span>
          <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <%= link_to '編集する', edit_admin_item_path(@item), class: 'btn btn-lg btn-info mt-5' %>
  </div>
  <% end %>
</div>
