<div class="row justify-content-center">
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h4>商品詳細</h4>
    </div>
  </div>

  <%= form_with model: @item do |f| %>
  <div class="row">
    <div class="col-md-3">
      <td><%= image_tag @item.image, size: "350x300" %><td>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>（税抜価格）</td>
          <!--税率を変更する場合はモデルの変更だけでOK。"delimited"は数値を3桁区切りにしてる。-->
          <td><%= @item.with_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <!--<#%= @item.is_active %>-->
          <% if @item.is_active %>
            <span class="text-success">販売中</span>
          <% else %>
            <span class="text-secondary">販売停止中</span>
          <% end %>
      
          </td>
        </tr>
        <tr>
          <td><%= link_to '編集する', edit_admin_item_path(@item), class: 'btn btn-success' %></td>
        </tr>
      </table>
    </div>
  </div>
  <% end %>
</div>