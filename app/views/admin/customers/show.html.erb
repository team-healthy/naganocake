  <h5 class="font-weight-bold w-25 text-center ml-5">マイページ</h5>
     <div class="row mt-3 mx-auto">
       <div class="col-6 mx-auto">
        <h4>登録情報</h4>
     
            <table class="table table-bordered">
                <tr>
                  <th>氏名</th>
                  <td><%= @customer.last_name %><%= @customer.first_name %></td>
                </tr>
                <tr>
                  <th>カナ</th>
                  <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                  <th>郵便番号</th>
                  <td><%= @customer.post_code %></td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td><%= @customer.address %></td>
                </tr>
                <tr>
                  <th>電話番号</th>
                  <td><%= @customer.phone_number %></td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td><%= @customer.email %></td>
                </tr>
                 <tr>
                  <th>会員ステータス</th>
                  <td>
                      <% if @customer.is_active %>
                        <span class="text-success">有効</span>
                      <% else %>
                        <span class="text-secondary">退会</span>
                      <% end %>
                  </td>
                </tr>
                </table>
        
        
        
        <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-sm btn-success" %>
 
        <%= link_to "注文履歴一覧を見る", admin_oder_path(@customer), class: "btn btn-sm btn-primary" %>

    </div>
  </div>
