 
 
 
 <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
              <th colspan="3"></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
         
             <% @customers.each do |customer| %>
                  <tr>
                    <td><%= customer.id %></td>
                    <td>
                        <%= link_to customer.last_name, admin_customer_path(customer) %>
                        <%= link_to customer.first_name, admin_customer_path(customer) %>
                    </td>
                    <td><%= customer.email %></td>
                    <td>
                        <% if customer.is_active %>
                          <span class="text-success">有効</span>
                        <% else %>
                          <span class="text-secondary">退会</span>
                        <% end %>
                    </td>
                    
                  </tr>
             <% end %>
                
          </tbody>     
  </table>