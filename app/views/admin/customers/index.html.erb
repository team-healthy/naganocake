<div class="container" style="margin-bottom: 50px;">
       <div class="row">
         <div class="col-2 text-center mt-5 mb-3" style="font-family: 'Playfair Display', serif; background-color:#faf0e6;">
              <h4>会員一覧</h4>
         </div>
        </div> 
 
  <div class="row mt-3 mx-auto">
  <div class="col mx-auto">
 
     <table class='table table-inverse'>
              <thead class="table table-active">
                <tr>
                  <th>会員ID</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
                  <th colspan="3"></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
             
                 <% @customers.each do |customer| %>
                      <tr>
                        <td><%= customer.id %></td>
                        <td>
                            <%= link_to customer.last_name + customer.first_name, edit_admin_customer_path(customer) %> 
                        </td>
                        <td><%= customer.email %></td>
                        <td>
                            <% if customer.is_active %>
                              <span class="text-success">有効</span>
                            <% else %>
                              <span class="text-secondary">退会</span>
                            <% end %>
                        </td>
                        
                      </tr>
                 <% end %>
                    
              </tbody>     
      </table>
      
      
      
      </div>
   </div>
   <div class = "row justify-content-center" >
     <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
   </div>
</div>
        
        
        