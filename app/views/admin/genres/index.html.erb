<div class="notice">
  <%= flash[:notice] %>
</div>

<div class="container mt-4 ml-15">
  <div class="col">
    <h4>ジャンル一覧・追加</h4>
  </div>
</div>


<%= form_with model: Genre.new, url: admin_genres_path do |f| %>
<div class="container mt-5 ml-5">
  <div class="row">
    <div class="col-2">
      <h6>ジャンル名</h6>
    </div>

    <div class="col-2 ml-3">
      <div class="form-group">
        <%= f.text_field :name, placeholder: 'ジャンル名' %>
      </div>
    </div>

    <div class="col-2 ml-3">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  </div>
</div>
<% end %>

<div class="container mt-5 ml-4">
  <div class="row">
<div class="col-4">
<table class="table table">
  <thead>
    <tr>
      <td>ジャンル</td>
      <td></td>
    </tr>
  </thead>

  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>