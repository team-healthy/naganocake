<div class="row justify-content-center">
  <%= flash[:notice] %>
</div>

<div class="container mt-4 ml-15">
  <div class="col-3 text-center" style="font-family: 'Playfair Display', serif; background-color:#faf0e6;">
    <h4>ジャンル一覧・追加</h4>
  </div>
</div>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<div class="container mt-5 ml-5">
  <div class="row d-flex justify-content-center">
    <div class="col-2 d-flex justify-content-center">
      <h6>ジャンル名</h6>
    </div>

    <div class="col-2">
      <%= f.text_field :name, placeholder: 'ジャンル名' %>
    </div>

    <div class="col-2 d-flex justify-content-end">
      <%= f.submit '新規登録', class: 'btn btn-info btn-lg' %>
    </div>
  </div>
</div>
<% end %>

<div class="container mt-5 ml-5">
  <div class="row d-flex justify-content-center">
    <div class="col-6">
    <table class="table">
      <thead class="table table-active">
        <tr>
          <td>ジャンル</td>
          <td></td>
        </tr>
      </thead>

      <% @genres.each do |genre| %>
      <tbody>
        <tr>
          <td>
            <div class="row ml-4"><%= genre.name %></div>
          </td>
          <td>
            <div class="row de-flex justify-content-end">
            <%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-info col-4 mr-5' %>
            </div>
            </td>
        </tr>
      </tbody>
      <% end %>

    </table>
    </div>
  </div>
</div>