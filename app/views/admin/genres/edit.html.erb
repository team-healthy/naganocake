<div class="container mt-4 ml-10">
  <div class="col">
    <h4>ジャンル編集</h4>
  </div>
</div>

<%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>

<div class="container mt-5 ml-5">
  <div class="row">
    <div class="col-2 ">
      <h6>ジャンル名</h6>
    </div>

    <div class="col-2">
      <div class="form-group">
        <%= f.text_field :name, placeholder: 'ジャンル名' %>
      </div>
    </div>

    <div class="col-2">
      <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>
  </div>
</div>
<% end %>
