<div class="container mt-4 ml-10">
  <div class="col">
    <h4>ジャンル編集</h4>
  </div>
</div>

<%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
<div class="container mt-5 ml-5">
  <div class="row">
    <div class="col-2 d-flex justify-content-center">
      <h6>ジャンル名</h6>
    </div>

    <div class="col-2">
      <%= f.text_field :name %>
    </div>

    <div class="col-2 d-flex justify-content-end">
      <%= f.submit '変更を保存', class: 'btn btn-info btn-lg' %>
    </div>
  </div>
</div>
<% end %>
