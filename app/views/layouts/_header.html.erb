<header>
  <div class="navbar" style="background-color:#875647;">
      
    　<div class="logo-section d-flex justify-content-start" style="margin-left: -300px;">

        <% if admin_signed_in? %>
           <a class="navbar-brand " href="/admin" ><span><%= image_tag 'shop_logo.png', size: "120x90" %></span></a>
         <% else %>
           <a class="navbar-brand " href="/" ><span><%= image_tag 'shop_logo.png', size: "120x90" %></span></a>
         <% end %> 
      </div>  
    
      <div class="name-section" style="color: white;">
         <% if customer_signed_in? %>
    		<h5>ようこそ、<%= current_customer.last_name %> さん!</h5>
         <% elsif admin_signed_in? %>
    		<h5>管理者でログインしています</h5>
    	 <% else %>
    	 <% end %>
     </div>



    <div class="right-section"> 
       <div class="link-section mb-3">

                  　<% if admin_signed_in? %>
                　　<!--admin側ログイン後のheaderを返す-->
                          <%= link_to admin_items_path,class: "btn btn-outline-light rounded-pill ml-2" do %>商品一覧 <% end %>
                          <%= link_to admin_customers_path,class: "btn btn-outline-light rounded-pill ml-2" do %>会員一覧<% end %>
                          <%= link_to admin_root_path,class: "btn btn-outline-light rounded-pill ml-2" do %>注文履歴一覧<% end %>
                          <%= link_to admin_genres_path,class: "btn btn-outline-light rounded-pill ml-2" do %>ジャンル一覧<% end %>
                          <%= link_to destroy_admin_session_path, method: :delete,class: "btn btn-outline-light rounded-pill ml-2" do %>ログアウト<% end %>
                     
              　　　  <% elsif customer_signed_in? %>
                　　<!--customerログイン後のheaderを返す  -->
                      <%= link_to customer_path(current_customer),class: "btn btn-outline-light rounded-pill ml-2" do %>マイページ <% end %>
                      <%= link_to items_path,class: "btn btn-outline-light rounded-pill ml-2" do %>商品一覧 <% end %>
                      <%= link_to cart_items_path ,class: "btn btn-outline-light rounded-pill ml-2" do %> カート<% end %>
                      <%= link_to destroy_customer_session_path, method: :delete,class: "btn btn-outline-light rounded-pill ml-2" do %>ログアウト<% end %>
               　　 <% else %>
               　　 <!--adminでもuserでもログインしていない時に表示するheaderのメニューを記載-->
                      <%= link_to home_about_path,class: "btn btn-outline-light rounded-pill ml-2" do %>About<% end %>
                      <%= link_to items_path,class: "btn btn-outline-light rounded-pill ml-2" do %>商品一覧<% end %>
                      <%= link_to new_customer_registration_path,class: "btn btn-outline-light rounded-pill ml-2" do %>新規登録<% end %>
                      <%= link_to new_customer_session_path ,class: "btn btn-outline-light rounded-pill ml-2" do %>ログイン<% end %>

             　　　　  <% end %>
         </div>
       
         <div class="search-window d-flex justify-content-end mr-4">
    　　<!--検索窓の表示-->
     　　 <%= render 'layouts/search' %>
     　　 
     　　</div>
    </div>
</div>
          
    
    
    
    
    
</header>

  