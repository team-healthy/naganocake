<h5><strong>ジャンル検索</strong></h5>

    <table class="table">
      <% genres.each do |genre| %>
        <tbody style="background-color: #fffaf0;">
          <tr>
            <td style="text-align: left; color: #583822;">
              <%= link_to genre.name, items_path(genre_id: genre.id), method: :get, class: "text-decoration-none text-dark" %>
            </td>
            <td style="text-align: right; color: #4e454a;">
              <%= genre.items.count %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>      
                            